[Trigger]
Type = File
Operation = Install
Operation = Upgrade
Target = usr/lib/systemd/system/timers.target.wants/infra-certificate@*.timer

[Action]
Description = Restarting certificates renewal timer...
When = PostTransaction
Exec = /usr/bin/bash -c '/usr/bin/systemctl daemon-reload && { while read -r f; do f="$(basename "$f")"; /usr/bin/systemctl start "$f"; done; }'
NeedsTargets

