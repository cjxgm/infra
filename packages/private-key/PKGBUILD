pkgname=infra-private-key
pkgver=0.1.0
pkgrel=2
pkgdesc="A private key to decrypt the decryption key of infra-secretary"
arch=(any)
license=('unknown')
groups=(infra)
depends=()
source=(
)
sha512sums=(
)

package()
{
    if [[ -r "/source/secret.pem" ]]; then
        install -Dm 600 "/source/secret.pem" "$pkgdir/usr/lib/infra/secretary/secret.pem"
    fi
}

