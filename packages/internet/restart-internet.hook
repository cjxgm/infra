[Trigger]
Type = Package
Operation = Install
Operation = Upgrade
Target = infra-internet
Target = infra-secretary
Target = infra-private-key

[Action]
Description = Restarting socket for THE internet access provider...
When = PostTransaction
Exec = /usr/bin/bash -c '/usr/bin/systemctl daemon-reload && /usr/bin/systemctl restart infra-internet.socket'

