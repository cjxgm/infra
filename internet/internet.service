[Unit]
Description=THE internet service provider
After=network.target

[Service]
Type=simple
DynamicUser=true
CapabilityBoundingSet=CAP_NET_BIND_SERVICE
ExecStartPre=!/usr/lib/infra/secretary/decrypt /usr/lib/infra/internet/secret-internet.json /tmp/internet.json
ExecStart=/usr/bin/ss-server -c /tmp/internet.json

[Install]
WantedBy=multi-user.target

